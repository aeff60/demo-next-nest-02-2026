# ===================================
# Production Environment Variables
# ===================================
# Copy this file to .env and fill in the values
# before running: docker compose up -d

# ---- Database ----
POSTGRES_USER=root
POSTGRES_PASSWORD=change_me_strong_password
POSTGRES_DB=authdb

# ---- API (NestJS) ----
DATABASE_HOST=postgres
DATABASE_PORT=5432
DATABASE_USER=root
DATABASE_PASSWORD=change_me_strong_password
DATABASE_NAME=authdb
DATABASE_SYNC=false
DATABASE_LOGGING=false

JWT_SECRET=change_me_super_secret_jwt_key_2026
JWT_EXPIRES_IN=1d

# LDAP
LDAP_URL=ldap://ldap:389
LDAP_BIND_DN=cn=admin,dc=borntodev,dc=com
LDAP_BIND_PASSWORD=admin123
LDAP_SEARCH_BASE=dc=borntodev,dc=com
LDAP_SEARCH_FILTER=(uid={{username}})

# ---- Frontend (Next.js) ----
# This is the PUBLIC URL the browser will use to reach the API
# Change to your EC2 public IP or domain
NEXT_PUBLIC_API_URL=http://your-ec2-ip:4000
